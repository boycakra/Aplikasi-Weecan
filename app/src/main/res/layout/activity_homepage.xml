<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical"
    tools:context=".Homepage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="67dp"
        android:layout_alignLeft="@id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:contentDescription="logo"
        app:srcCompat="@drawable/weecan" />

    <androidx.cardview.widget.CardView
        android:id="@+id/b7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignRight="@id/imageView"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:onClick="signOut"
        app:cardBackgroundColor="@color/quantum_deeporange"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/language"
            android:layout_width="36dp"
            android:layout_height="31dp"
            android:layout_alignRight="@id/imageView"
            android:layout_gravity="center"
            android:contentDescription="Logout"
            app:srcCompat="@drawable/exit" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:background="#1697A7B5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Welcome Faisal"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="40dp"
                android:text="We wish you have a good day"
                android:textColor="#1784DC"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:onClick="communicate"
                app:cardBackgroundColor="#80D1FF"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/fd" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="DIALOG"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginEnd="20dp"
                    android:onClick="assistanceVideoCall"
                    app:cardBackgroundColor="#60F0C6"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        app:srcCompat="@drawable/icon_alert_destructive" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="20dp"
                        android:text="EMERGENCY"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/b3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:onClick="personalProfile"
                    app:cardBackgroundColor="@color/alertDialog"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/pro" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="20dp"
                        android:text="PROFILE"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
